<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category %></title>
</head>

<body>
    <%- include('./partials/nav') %>

    <h1><% category %></h1>

    <% menuItems.forEach(item=> { %>
        <h2>
        <%= item.name %> <%= item.rating===5 ? 'â­' : '' %>
        - $<%= item.price.toFixed(2) %>
        </h2>
        <p><strong>Rating:</strong>
         <%= item.rating %>/5
        </p>
        <p>
         <%= item.details %>
        </p>
        <hr />
    <% }) %>
</body>

</html>